@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <form method="post">
        <div class="mb-3">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                <label class="form-check-label" for="inlineCheckbox1">Practise</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                <label class="form-check-label" for="inlineCheckbox2">Assessment</label>
            </div>
        </div>
        <div class="mb-3">
            <select class="form-select" aria-label="Default select example">
                <option selected>Select Security Group</option>
                <option value="EvolveLabUser">EvolveLabUser</option>
                <option value="MavericksLabUser">MavericksLabUser</option>
            </select>
        </div>
        <div class="mb-3 form-check">
            <label for="firstName">Employee Id</label>
            <input type="text" id="employeeID" name="employeeID" placeholder="Employee Id" />
            <button type="submit" class="btn btn-primary">Get Employee Detail</button>
        </div>
        <div class="col-md-12">
            <hr />
            @{
                List<UserRequest> lst = ViewData["UserRequest"] as List<UserRequest>;

                if (lst != null)
                {
                    foreach (var item in lst)
                    {
                        <div class="alert alert-secondary" role="alert">
                            Lab UserName : @item.Name <br />
                            Start Date : @item.From.ToShortDateString() <br />
                            End Date : @item.To.ToShortDateString() <br />
                        </div>                                    
                    }
                }
            }
            <hr />
        </div>
        <div class="mb-3 form-check">
            <button type="submit" class="btn btn-primary">Assign Lab</button>
        </div>
        <div class="col-md-12">
            <hr />
            @{
                if (ViewData["successMsg"] !=null)
                {
                    <div class="alert alert-success" role="alert">
                        @ViewData["successMsg"]
                    </div>
                }
            }
            <hr />
        </div>
    </form>


</div>
